{
  // https://v3.nuxtjs.org/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["vite/client", "node", "@pinia/nuxt"],
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@stores/*": ["./stores/*"]
    }
  },
  "exclude": ["**/node_modules", "**/dist", "**/*.stories.ts"]
}
